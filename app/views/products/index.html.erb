<h1>Listado de productos:</h1>

<table class="table table-striped table-condensed table-hover">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Categoria</th>
			<th>Stock</th>
			<th>Precio</th>
			<th>Imagen</th>
			<th>Acci√≥n</th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |p| %>
			<tr>
				<td><%= p.name %></td>
				<td><%= p.category.name %></td>
				<td><%= p.stock %></td>
				<td><%= p.price %></td>
				<td><img src="<%= p.photo %>" alt="" class="preview_image"></td>
				<td><%= link_to 'Add to CART', product_orders_path(p.id), class:'btn btn-success', method: :post %></td>
			</tr>
		<% end %>
	</tbody>
	
</table>



<h1>Listado de productos:</h1>

<table class="table table-striped table-condensed table-hover">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Categoría</th>
			<th>Stock</th>
			<th>Precio</th>
			<th>Imagen</th>
			<% if user_signed_in? %>
				th>Acción</th>
			<% end %>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |p| %>
			<tr>
				<td><%= p.name %>
					<%= link_to product_path(p.id), class: "btn btn-default" do %>
					    <i class="glyphicon glyphicon-search"></i>
					<% end %>
				</td>
				<td><%= p.category.name %></td>
				<td><%= p.stock %></td>
				<td><%= p.price %></td>
				<td><img src="<%= p.photo %>" alt="" class="preview_image"></td>
				<% if user_signed_in? %>
					<td><%= link_to 'Add to CART', product_orders_path(p.id), class:'btn btn-success', method: :post %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
	
</table>


